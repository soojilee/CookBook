<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leegacy.sooji.cookbook">


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="com.leegacy.sooji.cookbook.PineApplication"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.leegacy.sooji.cookbook.Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.leegacy.sooji.cookbook.Activities.SignInActivity"></activity>
        <activity android:name="com.leegacy.sooji.cookbook.Activities.TabsActivity"></activity>
        <activity android:name="com.leegacy.sooji.cookbook.Activities.HomeActivity"></activity>
        <activity android:name="com.leegacy.sooji.cookbook.Activities.SearchActivity"></activity>
        <activity android:name="com.leegacy.sooji.cookbook.Activities.CameraActivity"></activity>
        <activity android:name="com.leegacy.sooji.cookbook.Activities.ProfileActivity"></activity>
        <activity android:name="com.leegacy.sooji.cookbook.Activities.RegisterActivity"></activity>
        <activity android:name="com.leegacy.sooji.cookbook.Activities.RecordActivity"></activity>
        <activity android:name="com.leegacy.sooji.cookbook.Activities.PostActivity"></activity>
        <activity android:name="com.leegacy.sooji.cookbook.Activities.PlayDetailActivity"></activity>


    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
</manifest>
